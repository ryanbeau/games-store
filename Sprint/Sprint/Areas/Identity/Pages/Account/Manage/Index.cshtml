@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PreferredPlatformTypeId" class="control-label"></label>
                <select asp-for="Input.PreferredPlatformTypeId" class="form-control" asp-items="ViewBag.PreferredPlatformTypeId">
                    @if (ViewBag.PreferredPlatformTypeId.SelectedValue == null)
                    {
                        <option value="" selected>--None--</option>
                    }
                    else
                    {
                        <option value="">--None--</option>
                    }
                </select>
                <span asp-validation-for="Input.PreferredPlatformTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PreferredGameTypeId" class="control-label"></label>
                <select asp-for="Input.PreferredGameTypeId" class="form-control" asp-items="ViewBag.PreferredGameTypeId">
                    @if (ViewBag.PreferredGameTypeId.SelectedValue == null)
                    {
                        <option value="" selected>--None--</option>
                    }
                    else
                    {
                        <option value="">--None--</option>
                    }
                </select>
                <span asp-validation-for="Input.PreferredGameTypeId" class="text-danger"></span>
            </div>
            <div class="form-check mt-4">
                <input asp-for="Input.ReceivePromotionalEmails" type="checkbox" class="form-check-input">
                <label asp-for="Input.ReceivePromotionalEmails" class="form-check-label"></label>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary mt-3">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}